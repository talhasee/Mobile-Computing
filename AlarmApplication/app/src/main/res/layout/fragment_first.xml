<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/teal_200">
    <TimePicker
        android:id="@+id/TimePicker"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:numbersSelectorColor="@color/teal_200"
        />
    <Button
        android:id="@+id/fragButton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ALARM1"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="80dp"
        />
    <Button
        android:id="@+id/fragButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Alarm 2"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:layout_marginStart="220dp"
        />
    <Button
        android:id="@+id/homeBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/HOME"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_marginStart="30dp"
        />
    <Button
        android:id="@+id/stopBtn"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:text="@string/STOP"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="160dp"
        android:layout_marginStart="220dp"
        />
    <TextView
        android:id="@+id/Alarm1Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:hint="Alarm 1 Time"
        android:textStyle="bold"
        android:textSize="20sp"
        android:textColor="@color/teal_700"
        android:layout_marginStart="30dp"/>
    <TextView
        android:id="@+id/Alarm2Text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="400dp"
        android:textStyle="bold"
        android:hint="Alarm 2 Time"
        android:textColor="@color/teal_700"
        android:textSize="20sp"
        android:layout_marginStart="230dp"/>
</RelativeLayout>