<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/layout_color"
    android:orientation="vertical"
    tools:context=".MainActivity"
    android:gravity="center"
    >
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        />

    <ImageView
        android:id="@+id/OdysseyImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/odyssey_logo"
        android:translationX="0dp"
        android:translationY="10dp" />

    <ImageView
        android:layout_width="189dp"
        android:layout_height="180dp"
        android:src="@drawable/swagdesi"
        android:translationX="-130dp"
        android:translationY="10dp"
        />

    <ImageView
        android:layout_width="189dp"
        android:layout_height="180dp"
        android:src="@drawable/stylepardesi"
        android:translationX="130dp"
        android:translationY="-170dp" />
    <TextView
        android:id="@+id/OdysseyText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/autour_one"
        android:text="@string/textview"
        android:textSize="30sp"
        android:translationX="0dp"
        android:translationY="-170dp"
        />


</LinearLayout>